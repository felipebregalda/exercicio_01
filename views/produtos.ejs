<head>

	<%= titulo %>

</head>

<style>
	.remover:checked + span{
		color:red;
	}
	.lista-tarefas{
		list-style:none;
	}
</style>

<form method="post" action="/tarefa/adicionar">
	<label>Adicionar Produto</label>
	<input type="text" name="tarefa" placeholder="Adicionar produto">
	<input type="submit" value="Adicionar">
</form>



<form method="post" action="/tarefa/remover">
	<ul class="lista-tarefas">
	<% produtos.forEach(function(tarefa){ %>
		<li>
			<label>
                <input type="checkbox" name="produtos"
                       class="remover" 
                       value="<%= tarefa %>">
                       <span><%= tarefa %></span>
			</label>
		</li>
	<% }) %>
	</ul>
	<input type="submit" value="Remover">
</form>